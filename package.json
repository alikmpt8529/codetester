{
  "name": "coding-rule-checker",
  "version": "1.0.0",
  "description": "C言語コーディング規約チェッカー - Cross-platform desktop application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.js --mode development",
    "dev:main": "webpack --config webpack.main.js --mode development --watch",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --config webpack.renderer.js --mode production",
    "build:main": "webpack --config webpack.main.js --mode production",
    "clean:attrs": "xattr -cr .",
    "dist": "npm run build && npm run clean:attrs && electron-builder",
    "dist:mac": "npm run build && npm run clean:attrs && electron-builder --mac",
    "dist:win": "npm run build && npm run clean:attrs && electron-builder --win",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "coding-standards",
    "c-language",
    "cross-platform"
  ],
  "author": "Coding Rule Checker Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chardet": "^1.4.0",
    "diff": "^5.2.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^18.19.39",
    "@types/diff": "^5.2.0",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "27.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.34.1",
    "html-webpack-plugin": "^5.6.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2",
    "wait-on": "^7.2.0"
  }
}